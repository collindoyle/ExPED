#GNU Makefile

build ?= debug

all:
	mkdir -p build
	mkdir -p build/$(build)
	mkdir -p build/$(build)/mupdf
	mkdir -p include
	cd mupdf; make third libs;
	cp mupdf/build/$(build)/*.a build/$(build)/mupdf/
	cp -R mupdf/include/* include/ 
	cd src; make;
	cd test; make;

clean:
	rm -f build/$(build)/*


default : all

